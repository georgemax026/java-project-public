           <Button mnemonicParsing="false" onAction="#onBack" text="← Back">
               <HBox.margin>
                   <Insets left="15.0" top="14.0" />
               </HBox.margin>
           </Button>
           <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: white;" text="Search Results">
               <HBox.margin>
                   <Insets left="15.0" top="14.0" />
               </HBox.margin>
           </Label>
       </HBox>
   </top>
