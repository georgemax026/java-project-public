<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="900.0" prefWidth="1226.0" style="-fx-background-color: #1a1a1a; -fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.myApp.controllers.LoginController">

    <stylesheets>
        <URL value="@/main/resources/css/style.css" />
    </stylesheets>
   <top>
   
          <Label style="-fx-text-fill: white; -fx-font-size: 28; -fx-font-weight: bold;" text="Welcome my app" BorderPane.alignment="CENTER" />
   </top>
   <left>
      <VBox prefHeight="360.0" prefWidth="177.0" BorderPane.alignment="CENTER">
         <Label prefHeight="59.0" prefWidth="166.0" style="-fx-text-fill: white; -fx-font-size: 15; -fx-padding: 20;" text="Enter username:" />
      </VBox>
   </left>
   <center>
      <VBox prefHeight="255.0" prefWidth="522.0" BorderPane.alignment="CENTER">
         <TextField fx:id="usernameTextField" maxWidth="180.0">
            <VBox.margin>
               <Insets top="16.0" />
            </VBox.margin>
         </TextField>
         <HBox>
            <VBox.margin>
               <Insets top="20.0" />
            </VBox.margin>
            <Label alignment="CENTER" prefHeight="20.0" prefWidth="156.0" style="-fx-text-fill: white;" text="Don't have an account?">
               <padding>
                  <Insets top="4.0" />
               </padding>
            </Label>
            <Hyperlink onAction="#onRegisterUser" style="-fx-underline: true; -fx-cursor: hand;" text="Sign up" />
         </HBox>
      </VBox>
   </center>
   <bottom>
      <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#login" prefHeight="26.0" prefWidth="98.0" text="Login" BorderPane.alignment="CENTER_RIGHT">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
   </bottom>
</BorderPane>
