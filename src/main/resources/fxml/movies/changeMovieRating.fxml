<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import java.net.URL?>
<BorderPane prefHeight="145.0" prefWidth="170.0" style="-fx-background-color: #1a1a1a;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.myApp.controllers.movies.ChangeMovieRatingController">
    <stylesheets>
        <URL value="@/main/resources/css/style.css"/>
    </stylesheets>

    <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <Label prefHeight="38.0" prefWidth="132.0" style="-fx-text-fill: white;" text="Enter Rating:"/>
         <Spinner fx:id="ratingSpinner" maxWidth="130.0"/>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="BOTTOM_RIGHT" prefHeight="52.0" prefWidth="123.0" style="-fx-padding: 10;"
            BorderPane.alignment="CENTER">
         <Button mnemonicParsing="false" onAction="#changeRating" text="Confirm"/>
      </HBox>
   </bottom>
</BorderPane>
