<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="rootPane" style="-fx-background-color: #1a1a1a;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.myApp.controllers.MainController">
    <stylesheets>
        <URL value="@/main/resources/css/style.css" />
    </stylesheets>
    <top>
        <HBox fx:id="topRowHbox" spacing="10" style="-fx-background-color: #111; -fx-padding: 10;">

            <Label onMouseClicked="#refresh" style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;" text="My App">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Label>
            <StackPane fx:id="searchInputContainer" HBox.hgrow="ALWAYS">
                <TextField fx:id="searchField" promptText="Search..." style="-fx-background-color: #333; -fx-text-fill: white; -fx-background-radius: 6;" />
            </StackPane>

            <ChoiceBox fx:id="searchFilterChoiceBox" prefWidth="150" style="-fx-background-color: #333; -fx-text-fill: white;">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Title" />
                        <String fx:value="Genre" />
                        <String fx:value="Actor" />
                        <String fx:value="Director" />
                        <String fx:value="Min IMDb Rating" />
                        <String fx:value="Min User Rating" />
                    </FXCollections>
                </items>
            </ChoiceBox>

            <Button fx:id="searchButton" onAction="#onSearch" style="-fx-cursor: hand;" text="Search" />

            <Label fx:id="currentUserLabel" style="-fx-text-fill: #ccc;" text="User: Guest" />

            <Button fx:id="contextMenuButton" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 18; -fx-cursor: hand" text="⋮">
                <contextMenu>
                    <ContextMenu>
                        <items>
                            <MenuItem onAction="#addNewMovie" text="Add Movie" />
                            <MenuItem onAction="#addNewDirector" text="Add Director" />
                            <MenuItem onAction="#addNewActor" text="Add Actor" />
                            <Menu text="Series">
                                <MenuItem onAction="#addNewSeries" text="Add Series" />
                                <MenuItem onAction="#addNewSeason" text="Add Season" />
                                <MenuItem onAction="#addNewEpisode" text="Add Episode" />
                            </Menu>
                        </items>
                    </ContextMenu>
                </contextMenu>
            </Button>
        </HBox>
    </top>

    <center>
        <VBox spacing="30" style="-fx-padding: 20;">

            <VBox spacing="10">
                <Label style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: white;" text="Movies" />
                <StackPane>
                    <HBox fx:id="movieCardContainer" spacing="20" style="-fx-padding: 5; -fx-background-color: transparent;" />

                    <Button fx:id="movieLeftArrow" onAction="#onMovieLeft" text="❮" StackPane.alignment="CENTER_LEFT" />
                    <Button fx:id="movieRightArrow" onAction="#onMovieRight" text="❯" StackPane.alignment="CENTER_RIGHT" />
                </StackPane>
            </VBox>

            <VBox spacing="10">
                <Label style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: white;" text="Series" />
                <StackPane>
                    <HBox fx:id="seriesCardContainer" spacing="20" style="-fx-padding: 5; -fx-background-color: transparent;" />

                    <Button fx:id="seriesLeftArrow" onAction="#onSeriesLeft" text="❮" StackPane.alignment="CENTER_LEFT" />
                    <Button fx:id="seriesRightArrow" onAction="#onSeriesRight" text="❯" StackPane.alignment="CENTER_RIGHT" />
                </StackPane>
            </VBox>

        </VBox>
    </center>

</BorderPane>
